require 'vendor/autoload.php';

use Conso\Input;
use Conso\Output;
use Conso\Config;

/**
 * load config
 */
Config::load();

/**
 * adding custom config
 * example:
 * COMMANDS  => your commands dir
 * NAMESPACE => your commands namespace
 */
Config::add('src/Aven/Console/conf.php');
/**
 * get instance
 */
$app = new Conso\App(new Input, new Output);


// start application
$app->run();


